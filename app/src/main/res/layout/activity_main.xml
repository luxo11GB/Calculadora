<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_expression"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:textAlignment="textEnd"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="0dp"
        android:textColor="@color/white"
        android:layout_height="60dp"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textAlignment="textEnd"
        app:layout_constraintTop_toBottomOf="@id/tv_expression"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <GridLayout
        android:id="@+id/buttonGrid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:rowCount="5"
        android:columnCount="3"
        android:padding="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_result"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="1">

        <!-- Botones: usa style CalcButton -->
        <Button android:id="@+id/btnClear"
                android:text="C" style="@style/Theme.Calculadora"
            android:backgroundTint="#828781"/>


        <Button android:id="@+id/btnDelete"
                android:text="âŒ«" style="@style/Theme.Calculadora"
            android:backgroundTint="#828781"/>

        <Button android:id="@+id/btnDivide"
            android:text="/" style="@style/Theme.Calculadora"
            android:backgroundTint="#FF9800"/>

        <Button android:id="@+id/btn9"
            android:text="9" style="@style/Theme.Calculadora" />

        <Button android:id="@+id/btn8"
            android:text="8" style="@style/Theme.Calculadora" />

        <Button android:id="@+id/btnMultiply"
            android:text="*" style="@style/Theme.Calculadora"
            android:backgroundTint="#FF9800"/>


        <Button android:id="@+id/btn7"
                android:text="7" style="@style/Theme.Calculadora" />

        <Button android:id="@+id/btn6"
                android:text="6" style="@style/Theme.Calculadora" />

        <Button android:id="@+id/btnAdd"
            android:text="+" style="@style/Theme.Calculadora"
            android:backgroundTint="#FF9800"/>


        <Button android:id="@+id/btn5"
                android:text="5" style="@style/Theme.Calculadora" />

        <Button android:id="@+id/btn4"
                android:text="4" style="@style/Theme.Calculadora" />

        <Button android:id="@+id/btnSubtract"
            android:text="-" style="@style/Theme.Calculadora"
            android:backgroundTint="#FF9800"/>

        <Button android:id="@+id/btn3"
            android:text="3" style="@style/Theme.Calculadora" />


        <Button android:id="@+id/btn2"
                android:text="2" style="@style/Theme.Calculadora" />

        <Button android:id="@+id/btnEquals"
            android:text="=" style="@style/Theme.Calculadora"
            android:backgroundTint="#FF9800"/>

        <Button android:id="@+id/btn1"
            android:text="1" style="@style/Theme.Calculadora" />

        <Button android:id="@+id/btn0"
                android:text="0" style="@style/Theme.Calculadora" />

        <Button android:id="@+id/btnDot"
                android:text="." style="@style/Theme.Calculadora" />



        <Space android:layout_width="0dp"
                android:layout_height="0dp" />

        <Space android:layout_width="0dp"
                android:layout_height="0dp" />
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

